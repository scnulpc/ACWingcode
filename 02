#include<iostream>
#include<algorithm>
using namespace std;
int n,m;
const int N = 1005;
int v[N],w[N];
int f[N][N]; //f[i][j] 考虑前i个物体，容量为j的条件下的最大价值
int main()
{
    cin>>n>>m;
    for(int i=1;i<=n;i++)cin>>v[i]>>w[i];
    
    for(int i=1;i<=n;i++)
    {
        for(int j=0;j<=m;j++)
        {
            //容量不够装第i个物体
            if(j<v[i]) f[i][j] = f[i-1][j];
            else{
                f[i][j] = max(f[i-1][j],f[i-1][j-v[i]]+w[i]);
            }
        }
    }
    
    cout<<f[n][m]<<endl;
    return 0;
    
}
